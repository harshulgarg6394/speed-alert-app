
{
  "expo": {
    "name": "speed-alert-app",
    "slug": "speed-alert-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "speedalertapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      // --- START NEW ADDITION (ios infoPlist) ---
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs your location to monitor vehicle speed and detect incidents.",
        "NSMotionUsageDescription": "This app uses device motion sensors (accelerometer, gyroscope) to detect vehicle impacts and rollovers."
      }
      // --- END NEW ADDITION (ios infoPlist) ---
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      // --- START NEW ADDITION (android permissions) ---
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "FOREGROUND_SERVICE"
      ]
      // --- END NEW ADDITION (android permissions) ---
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      // --- START NEW ADDITION (plugins) ---
      "expo-location",
      "expo-sensors"
      // --- END NEW ADDITION (plugins) ---
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
